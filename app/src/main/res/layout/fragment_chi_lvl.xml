<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiLvlFragment"
    android:background="#6EABF6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/chiLvl1Card"
            android:layout_width="250dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chiLevelTitle"
            app:layout_constraintVertical_bias="0.051">

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/chiLvl2Card"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="@+id/chiLvl1Card"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/chiLvl1Card"
            app:layout_constraintTop_toBottomOf="@+id/chiLvl1Card">

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/chiLevelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/diplomata"
            android:gravity="center_horizontal"
            android:text="@string/chiLvlTitle"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.089" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>