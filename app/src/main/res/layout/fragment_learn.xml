<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:background="#F1E950"
    tools:context=".LearnFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        >

        <!--Japanese card-->
        <androidx.cardview.widget.CardView
            android:id="@+id/jpnCard"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.453"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.074">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/japan_flag"
                android:scaleType="centerCrop"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <!--Title-->
                <Button
                    android:id="@+id/jpnBtn"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="146dp"
                    android:layout_height="58dp"
                    android:fontFamily="casual"
                    android:text="@string/chooseBtn"
                    android:textColor="#131313"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/jpnTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/diplomata"
                    android:gravity="center_horizontal"
                    android:text="@string/chooseJpnBtnText"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:background="@color/white"
                    android:textColor="#0E0E0E"
                    app:layout_constraintBottom_toBottomOf="@+id/jpnBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.448"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.164" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!--Chinese card-->
        <androidx.cardview.widget.CardView
            android:id="@+id/chiCard"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/jpnCard"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/jpnCard"
            app:layout_constraintTop_toBottomOf="@+id/jpnCard"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/china_flag"
                android:scaleType="centerCrop"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--Title-->

                <Button
                    android:id="@+id/chiBtn"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="135dp"
                    android:layout_height="43dp"
                    android:fontFamily="casual"
                    android:paddingTop="2dp"
                    android:text="@string/chooseBtn"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.504"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.955" />

                <!--Supporting text-->
                <TextView
                    android:id="@+id/chiTitle"
                    android:layout_width="204dp"
                    android:layout_height="34dp"
                    android:background="#F11E1E"
                    android:fontFamily="@font/diplomata"
                    android:gravity="center_horizontal"
                    android:paddingTop="7dp"
                    android:text="@string/chooseChiBtnText"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="#100F0F"
                    app:layout_constraintBottom_toTopOf="@+id/chiBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.652"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.139" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <!--Korean card-->
        <androidx.cardview.widget.CardView
            android:id="@+id/korCard"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/chiCard"
            app:layout_constraintStart_toStartOf="@+id/chiCard"
            app:layout_constraintTop_toBottomOf="@+id/chiCard"
            app:layout_constraintVertical_bias="0.104" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/korea_flag"
                android:scaleType="centerCrop"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--Title-->

                <Button
                    android:id="@+id/korBtn"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="146dp"
                    android:layout_height="58dp"
                    android:fontFamily="casual"
                    android:text="@string/chooseBtn"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.95" />

                <TextView
                    android:id="@+id/korTitle"
                    android:layout_width="204dp"
                    android:layout_height="34dp"
                    android:background="@color/white"
                    android:fontFamily="@font/diplomata"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:text="@string/chooseKorBtnText"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="#0C0C0C"
                    app:layout_constraintBottom_toTopOf="@+id/korBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.172" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/diplomata"
            android:text="@string/chooseLanguageText"
            android:textColor="#090909"
            app:layout_constraintBottom_toTopOf="@+id/jpnCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>









