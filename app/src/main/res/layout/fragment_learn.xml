<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:background="#5BABF1"
    tools:context=".LearnFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        >

        <!--Japanese card-->
        <androidx.cardview.widget.CardView
            android:id="@+id/jpnCard"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.453"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.074">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/jpnBtn"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="146dp"
                    android:layout_height="58dp"
                    android:fontFamily="casual"
                    android:text="@string/chooseBtn"
                    android:textColor="@color/button_blue"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.894" />

                <!--Title-->
                <TextView
                    android:id="@+id/jpnTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/diplomata"
                    android:text="@string/chooseJpnBtnText"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/button_blue"
                    app:layout_constraintBottom_toBottomOf="@+id/jpnBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.503"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.1" />

                <!--Supporting text-->
                <TextView
                    android:id="@+id/jpnContextText"
                    android:layout_width="218dp"
                    android:layout_height="81dp"
                    android:fontFamily="casual"
                    android:gravity="center_horizontal"
                    android:text="@string/jpnContext"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="#0755DD"
                    android:textSize="14sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toTopOf="@+id/jpnBtn"
                    app:layout_constraintEnd_toEndOf="@+id/jpnTitle"
                    app:layout_constraintStart_toStartOf="@+id/jpnTitle"
                    app:layout_constraintTop_toBottomOf="@+id/jpnTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!--Chinese card-->
        <androidx.cardview.widget.CardView
            android:id="@+id/chiCard"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/jpnCard"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/jpnCard"
            app:layout_constraintTop_toBottomOf="@+id/jpnCard"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/chiBtn"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="146dp"
                    android:layout_height="58dp"
                    android:fontFamily="casual"
                    android:text="@string/chooseBtn"
                    android:textColor="@color/button_blue"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.894" />

                <!--Title-->
                <TextView
                    android:id="@+id/chiTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/diplomata"
                    android:text="@string/chooseChiBtnText"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/button_blue"
                    app:layout_constraintBottom_toTopOf="@+id/chiBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.503"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.158" />

                <!--Supporting text-->
                <TextView
                    android:id="@+id/chiContextText"
                    android:layout_width="181dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="casual"
                    android:gravity="center_horizontal"
                    android:text="@string/chiContext"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="#0755DD"
                    android:textSize="14sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toTopOf="@+id/chiBtn"
                    app:layout_constraintEnd_toEndOf="@+id/chiTitle"
                    app:layout_constraintHorizontal_bias="0.6"
                    app:layout_constraintStart_toStartOf="@+id/chiTitle"
                    app:layout_constraintTop_toBottomOf="@+id/chiTitle"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <!--Korean card-->
        <androidx.cardview.widget.CardView
            android:id="@+id/korCard"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/chiCard"
            app:layout_constraintStart_toStartOf="@+id/chiCard"
            app:layout_constraintTop_toBottomOf="@+id/chiCard"
            app:layout_constraintVertical_bias="0.104" >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/korBtn"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="146dp"
                    android:layout_height="58dp"
                    android:fontFamily="casual"
                    android:text="@string/chooseBtn"
                    android:textColor="@color/button_blue"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.887" />

                <!--Title-->
                <TextView
                    android:id="@+id/korTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/diplomata"
                    android:text="@string/chooseKorBtnText"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/button_blue"
                    app:layout_constraintBottom_toTopOf="@+id/korBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.148" />

                <TextView
                    android:id="@+id/korContextText"
                    android:layout_width="178dp"
                    android:layout_height="72dp"
                    android:fontFamily="casual"
                    android:gravity="center_horizontal"
                    android:text="@string/korContext"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="#0755DD"
                    android:textSize="14sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toTopOf="@+id/korBtn"
                    app:layout_constraintEnd_toEndOf="@+id/korTitle"
                    app:layout_constraintStart_toStartOf="@+id/korTitle"
                    app:layout_constraintTop_toBottomOf="@+id/korTitle" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>









