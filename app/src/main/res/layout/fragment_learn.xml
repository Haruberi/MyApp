<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:background="#5BABF1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".LearnFragment">

        <!--Japanese card-->
        <androidx.cardview.widget.CardView
            android:id="@+id/jpnCard"
            android:layout_width="350dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.453"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.074">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/jpnButton"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="146dp"
                    android:layout_height="58dp"
                    android:fontFamily="casual"
                    android:text="@string/chooseBtn"
                    android:textColor="@color/button_blue"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.894" />

                <TextView
                    android:id="@+id/jpnTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/diplomata"
                    android:text="@string/chooseJpnBtnText"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/button_blue"
                    app:layout_constraintBottom_toBottomOf="@+id/jpnButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.101" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!--Chinese card-->
        <androidx.cardview.widget.CardView
            android:id="@+id/chiCard"
            android:layout_width="350dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jpnCard"
            app:layout_constraintVertical_bias="0.224">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/chiBtn"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="146dp"
                    android:layout_height="58dp"
                    android:fontFamily="casual"
                    android:text="@string/chooseBtn"
                    android:textColor="@color/button_blue"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.887" />

                <TextView
                    android:id="@+id/chiTitle"
                    android:layout_width="202dp"
                    android:layout_height="32dp"
                    android:fontFamily="@font/diplomata"
                    android:text="@string/chooseChiBtnText"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/button_blue"
                    app:layout_constraintBottom_toTopOf="@+id/chiBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.17" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>









