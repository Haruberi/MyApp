<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6EABF6"
    android:fillViewport="true"
    tools:context=".LanguageActivities.KorQuizFragment">

    <Button
        android:id="@+id/gotoKorQuiz"
        android:layout_width="327dp"
        android:layout_height="211dp"
        android:background="@drawable/input_bg"
        android:fontFamily="casual"
        android:text="@string/lvl1More"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/korTitle"
        app:layout_constraintVertical_bias="0.14" />

    <TextView
        android:id="@+id/korTitle"
        android:layout_width="411dp"
        android:layout_height="99dp"
        android:layout_marginTop="28dp"
        android:background="@color/korColor"
        android:fontFamily="@font/diplomata"
        android:gravity="center|center_horizontal"
        android:text="@string/korQuizTitle"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />
</androidx.constraintlayout.widget.ConstraintLayout>