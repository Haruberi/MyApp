<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".JpnLvlFragment"
    android:background="#6EABF6"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Level 1-->
        <androidx.cardview.widget.CardView
            android:id="@+id/lvl1Card"
            android:layout_width="250dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/levelTitle"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="@+id/levelTitle"
            app:layout_constraintTop_toBottomOf="@+id/levelTitle"
            app:layout_constraintVertical_bias="0.072">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="121dp"
                    android:layout_height="65dp"
                    android:src="@drawable/jpn_lvl_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.507"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.007" />

                <!--Title-->
                <TextView
                    android:id="@+id/jpnLvl1Title"
                    android:layout_width="112dp"
                    android:layout_height="44dp"
                    android:fontFamily="casual"
                    android:gravity="center_horizontal"
                    android:text="@string/lvl1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imageView4"
                    app:layout_constraintHorizontal_bias="0.444"
                    app:layout_constraintStart_toStartOf="@+id/imageView4"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4"
                    app:layout_constraintVertical_bias="0.133" />

                <Button
                    android:id="@+id/btnReadMore"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="196dp"
                    android:layout_height="55dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:text="@string/lvl1More"
                    android:textColor="#EA537E"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/jpnLvl1Title"
                    app:layout_constraintStart_toStartOf="@+id/jpnLvl1Title"
                    app:layout_constraintTop_toBottomOf="@+id/jpnLvl1Title"
                    app:layout_constraintVertical_bias="0.304" />
            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/levelTitle"
            android:layout_width="409dp"
            android:layout_height="59dp"
            android:fontFamily="@font/diplomata"
            android:gravity="center_horizontal"
            android:text="@string/jpnlvlTitle"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.071" />
            </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>